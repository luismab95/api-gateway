{
  "name": "ms-gateway",
  "version": "1.0.0",
  "description": "Microservice for api gateway",
  "main": "src/main.js",
  "scripts": {
    "start": "node dist/src/main.js",
    "start:dev": "tsnd --respawn src/main.ts",
    "test": "npm run test:unit",
    "test:unit": "NODE_ENV=test jest --coverage",
    "prepare": "husky install",
    "lint": "eslint --ignore-path .gitignore . --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "build": "npm run build:clean && npm run build:tsc",
    "build:clean": "rimraf dist; exit 0",
    "build:tsc": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/_rgomez/ms-gateway.git"
  },
  "keywords": [
    "typescript",
    "ms-gateway"
  ],
  "author": "lbarragan@viamatica.com",
  "engines": {
    "node": ">=20.12.2",
    "npm": ">=10.5.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.2"
  },
  "lint-staged": {
    "*.(js|ts)": [
      "npm run lint:fix"
    ]
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^3.0.0",
    "morgan": "^1.10.0",
    "winston": "^3.12.0",
    "winston-daily-rotate-file": "^5.0.0"
  }
}